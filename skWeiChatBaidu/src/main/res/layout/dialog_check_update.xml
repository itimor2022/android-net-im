<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <RelativeLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_rectangle_white_12"
            android:paddingBottom="@dimen/dp10"
            android:layout_marginBottom="@dimen/dp10">

            <TextView
                android:id="@+id/text1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp10"
                android:text="版本更新"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_16_text_size" />

            <TextView
                android:id="@+id/tv_remark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/text1"
                android:maxLines="5"
                android:minLines="2"
                android:padding="@dimen/dp10"
                android:scrollbars="vertical"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_14_text_size"
                tools:text="1,修复BUG /t2.2323232323 /t3.撒旦艰苦拉萨大家老师
撒旦艰苦拉萨大家老师撒旦艰苦拉萨大家老师撒旦艰苦拉萨大家老师撒旦艰苦拉萨大家老师撒旦艰苦拉萨大家老师撒旦艰苦拉萨大家老师" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_remark"
                android:layout_gravity="center"
                android:layout_marginBottom="12dp"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_no"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="12dp"
                    android:gravity="center"
                    android:padding="@dimen/dp10"
                    android:text="取消"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_12_text_size" />

                <TextView
                    android:id="@+id/tv_yes"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:gravity="center"
                    android:padding="@dimen/dp10"
                    android:text="立即下载"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_12_text_size" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>