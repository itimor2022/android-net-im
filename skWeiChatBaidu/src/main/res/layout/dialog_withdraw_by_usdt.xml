        <!--录入USDT转账地址-layout2-->
        <LinearLayout
            android:id="@+id/ll1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp15"
            android:background="@drawable/fillet_dialog_bg"
            android:orientation="vertical"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:visibility="gone"
                android:padding="@dimen/dp15">

                <TextView
                    android:id="@+id/tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="转账地址"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/sp_15_text_size" />

                <EditText
                    android:id="@+id/tv1_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="输入转账地址"
                    android:textColorHint="@color/scan_recharge_tip"
                    android:paddingStart="@dimen/dp15"
                    android:paddingTop="5dp"
                    android:paddingEnd="15dp"
                    android:paddingBottom="5dp"
                    android:singleLine="true"
                    android:layout_weight="1"
                    android:focusable="false"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/sp_15_text_size" />

                <ImageView
                    android:id="@+id/iv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:src="@mipmap/copy_icon_blue" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="@dimen/dp15">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/recharge_usdt_addrtype"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/sp_15_text_size" />

                <EditText
                    android:visibility="gone"
                    android:id="@+id/tv2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint=""
                    android:paddingStart="@dimen/dp15"
                    android:paddingTop="5dp"
                    android:paddingEnd="15dp"
                    android:paddingBottom="5dp"
                    android:textColorHint="@color/scan_recharge_tip"
                    android:singleLine="true"
                    android:text="TRC20"
                    android:focusable="false"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/sp_15_text_size" />

                <Spinner
                    android:id="@+id/dialog_withdraw_sp2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint=""
                    android:paddingStart="@dimen/dp15"
                    android:paddingTop="5dp"
                    android:paddingEnd="15dp"
                    android:paddingBottom="5dp"
                    android:textColorHint="@color/scan_recharge_tip"
                    android:singleLine="true"
                    android:focusable="false"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/sp_15_text_size" />

            </LinearLayout>

            <View
                style="@style/View_Line"
                android:layout_marginLeft="@dimen/dp15"
                android:layout_marginRight="@dimen/dp15" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="@dimen/dp15">

                <TextView
                    android:id="@+id/tv_input_room_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/withdraw_usdt_user_addr"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/sp_15_text_size" />

                <EditText
                    android:id="@+id/second_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="@string/withdraw_usdt_user_addr_hint"
                    android:paddingStart="@dimen/dp15"
                    android:paddingTop="5dp"
                    android:paddingEnd="15dp"
                    android:paddingBottom="5dp"
                    android:textColorHint="@color/scan_recharge_tip"
                    android:singleLine="true"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/sp_15_text_size" />

            </LinearLayout>

            <View
                style="@style/View_Line"
                android:layout_marginLeft="@dimen/dp15"
                android:layout_marginRight="@dimen/dp15" />

        </LinearLayout>

        <TextView
            android:id="@+id/tip_tv"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:gravity="center_vertical"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="@string/usdt_withdraw_tip1"
            android:textColor="@color/scan_recharge_tip"
            android:textSize="@dimen/sp_15_text_size" />
        <TextView
            android:id="@+id/tip2_tv"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:gravity="center_vertical"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="@string/usdt_withdraw_tip2"
            android:textColor="@color/scan_recharge_tip"
            android:textSize="@dimen/sp_15_text_size" />

    </LinearLayout>

    <View style="@style/View_Line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:orientation="horizontal"
        android:padding="12dp">

        <TextView
            android:id="@+id/cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="6dp"
            android:layout_weight="1"
            android:background="@drawable/scan_recharge_dialog_white"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="@color/Grey_600"
            android:textSize="@dimen/sp_18_text_size" />

        <TextView
            android:id="@+id/confirm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="6dp"
            android:layout_weight="1"
            android:background="@drawable/scan_recharge_dialog_blue"
            android:gravity="center"
            android:text="@string/sure"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_18_text_size" />

    </LinearLayout>

</LinearLayout>