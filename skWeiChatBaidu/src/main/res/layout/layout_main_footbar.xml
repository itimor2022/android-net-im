<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <View
        android:id="@+id/line_view"
        style="@style/View_Line" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f1f1f1">

        <RadioGroup
            android:id="@+id/main_rg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true">

            <RadioButton
                android:id="@+id/rb_tab_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:button="@null"
                android:padding="5dp"
                android:drawableTop="@drawable/tab_chat_normal_bg"
                android:gravity="center"
                android:textColor="@color/main_tab_btn_text"
                android:textSize="@dimen/tab_text_size"
                android:text="@string/message" />

            <RadioButton
                android:id="@+id/rb_tab_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:button="@null"
                android:padding="5dp"
                android:drawableTop="@drawable/tab_group_normal_bg"
                android:gravity="center"
                android:textColor="@color/main_tab_btn_text"
                android:textSize="@dimen/tab_text_size"
                android:text="@string/contacts" />

            <RadioButton
                android:id="@+id/rb_tab_nav1"
                style="@style/SkMainTabStyle"
                android:drawableTop="@drawable/tab_web_normal_bg"
                android:text="@string/app_name"
                android:visibility="gone"
                tools:visibility="visible"/>

            <RadioButton
                android:id="@+id/rb_tab_nav2"
                style="@style/SkMainTabStyle"
                android:drawableTop="@drawable/tab_find_normal_bg"
                android:text="导航2"
                android:visibility="gone" />

            <RadioButton
                android:id="@+id/rb_tab_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:button="@null"
                android:padding="5dp"
                android:drawableTop="@drawable/tab_find_normal_bg"
                android:gravity="center"
                android:textColor="@color/main_tab_btn_text"
                android:textSize="@dimen/tab_text_size"
                android:text="@string/fragment_discover_title" />
<!--            android:text="@string/fragment_discover_title"-->
            <RadioButton
                android:id="@+id/rb_tab_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:button="@null"
                android:padding="5dp"
                android:drawableTop="@drawable/tab_my_normal_bg"
                android:gravity="center"
                android:textColor="@color/main_tab_btn_text"
                android:textSize="@dimen/tab_text_size"
                android:text="@string/me" />

        </RadioGroup>

        <LinearLayout
            android:id="@+id/num_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/main_rg"
            android:layout_marginTop="2dp"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/main_tab_one_tv"
                    android:layout_width="@dimen/indicator_size"
                    android:layout_height="@dimen/indicator_size"
                    android:layout_gravity="top|right"
                    android:layout_marginRight="@dimen/indicator_margin"
                    android:background="@drawable/tab_unread_bg"
                    android:gravity="center"
                    android:singleLine="true"
                    android:textColor="@android:color/white"
                    android:textSize="10dp"
                    android:visibility="invisible" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/main_tab_two_tv"
                    android:layout_width="@dimen/indicator_size"
                    android:layout_height="@dimen/indicator_size"
                    android:layout_gravity="top|right"
                    android:layout_marginRight="@dimen/indicator_margin"
                    android:background="@drawable/tab_unread_bg"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:textSize="10dp"
                    android:visibility="invisible" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/main_tab_three_tv"
                    android:layout_width="@dimen/indicator_size"
                    android:layout_height="@dimen/indicator_size"
                    android:layout_gravity="top|right"
                    android:layout_marginRight="@dimen/indicator_margin"
                    android:background="@drawable/tab_unread_bg"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:textSize="10dp"
                    android:visibility="invisible" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/main_tab_four_tv"
                    android:layout_width="@dimen/indicator_size"
                    android:layout_height="@dimen/indicator_size"
                    android:layout_gravity="top|right"
                    android:layout_marginRight="@dimen/indicator_margin"
                    android:background="@drawable/tab_unread_bg"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:textSize="10dp"
                    android:visibility="invisible" />

            </FrameLayout>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>